<!DOCTYPE html>

    <%- include('../../../partials/head'); %>
    <title>Cadastro | Cárdapio</title>

<body>
    
    <%- include('../../../partials/header'); %>

    <div class="container div">
        <p class="text-center text-white fonte">Cadastro</p>
    </div>

    <form method="POST" class="form">
        <div class="form-row">
          <div class="col">
            <label for="name">Nome completo</label>
            <input id="name" name="name" type="text" class="form-control" placeholder="Fulano" required autofocus pattern="[a-zA-Z/s]+$">
          </div>
          
            <div class="col">
              <label for="tel">Número</label>
              <input id="tel" name="text" class="form-control" type="text" maxlength="14" required onkeypress="mascara(this)" placeholder="(00)00000-0000" maxlength="14" pattern="\([0-9]{2}\)[0-9]{4,6}-[0-9]{3,4}$">
            </div>
          </div>

          <div class="form-row">
            <div class="col">
                <label for="cep">CEP</label>
                <input type="text" id="cep" name="cep" maxlength="8" class="form-control" placeholder="CEP" required>
            </div>
          </div>

          <div class="form-row">
            <div class="col">
              <label for="email">Email</label>
              <input id="email" name="email" type="email" class="form-control" placeholder="example@gmail.com" required autofocus pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
            </div>
          
            <div class="col">
              <label for="password">Senha</label>
              <input id="password" name="password" class="form-control" type="password" required placeholder="Senha">
            </div>
          </div>
          
        <a href="/login">Login</a>
        <input id="but" type="submit" class="btn btn-outline-danger btn-lg btn-block"  value="Criar cadastro"></input>
    </form>

    <%- include('../../../partials/script'); %>
    
    <script src="/js/mask.js"></script>
    <script src="/js/disable.js"></script>
</body>
</html>