<!DOCTYPE html>

    <%- include('../partials/head'); %>
    <title>Contatos</title>
    
<body>

    <%- include('../partials/header'); %>

    <div class="container div">
        <p class="text-center text-white fonte">Sua avaliação</p>
    </div>

    <form method="POST" class="form" action="">
        <div class="form-row">
            <div class="col">
              <label for="name">Nome</label>
              <input id="name" name="name" type="text" class="form-control" placeholder="Fulano" required autofocus pattern="[a-zA-Z/s]+$">
            </div>
        
          <div class="col">
            <label for="city">Cidade</label>
            <select class="form-control" name="city" id="city" required>
                <option selected value="">--Selecione--</option>
                <option value="Rio de Janeiro">Rio de Janeiro</option>
                <option value="São Paulo">São Paulo</option>
            </select>
          </div>
        </div>

        <div class="form-row">
            <div class="col">
              <label for="tel">Número</label>
              <input id="tel" name="tel" type="tel" class="form-control" placeholder="(00)00000-0000" maxlength="14" onkeypress="mascara(this)" required pattern="\([0-9]{2}\)[0-9]{4,6}-[0-9]{3,4}$">
            </div>
        
          <div class="col">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" class="form-control" required placeholder="example@gmail.com" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
          </div>
        </div>

        <div class="form-row">
            <div class="col">
              <label for="contact">Como deveriamos contacta-lo?</label>
              <select class="form-control" name="contact" id="contact" required>
                  <option value="">--Selecionar--</option>
                  <option value="Celular">Celular</option>
                  <option value="Email">Email</option>
                  <option value="Sem entrar em contato">Não há necessidade de entrar em contato</option>
              </select>
            </div>
        </div>

        <div class="form-row">
          <div class="col">
            <label for="passw">Comentário</label>
            <textarea class="form-control" name="" id="" cols="20" rows="5" placeholder="Seu feed aqui" required></textarea>
          </div>
        </div>
      
        <button type="submit" class="btn btn-outline-danger btn-lg btn-block">Enviar Feedback</button>
    </form>

    <%- include('../partials/script'); %>

    <script src="/js/mask.js"></script>
</body>
</html>